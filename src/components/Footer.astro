---
// Footer â€” 3-column grid
const currentYear = new Date().getFullYear();

const columns = {
  product: [
    { label: 'Download', href: '#download' },
    { label: 'Documentation', href: '/docs/' },
    { label: 'GitHub', href: 'https://github.com/carlos-andres/DotEdit', external: true },
    { label: 'Changelog', href: 'https://github.com/carlos-andres/DotEdit/releases', external: true },
  ],
  legal: [
    { label: 'MIT License', href: 'https://github.com/carlos-andres/DotEdit/blob/main/LICENSE', external: true },
    { label: 'Privacy Policy', href: '/privacy/' },
    { label: 'Terms of Use', href: '/terms/' },
  ],
};
---

<footer
  class="border-t border-[var(--color-border)] py-16 px-6"
  role="contentinfo"
>
  <div class="mx-auto max-w-[1200px] grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
    <!-- Product -->
    <div>
      <h3 class="text-sm font-semibold text-[var(--color-text)] mb-4 uppercase tracking-wider">
        Product
      </h3>
      <ul class="space-y-3">
        {columns.product.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)]
                     transition-colors duration-200"
              {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
            >
              {link.label}
              {link.external && (
                <svg class="inline-block w-3 h-3 ml-1 opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" x2="21" y1="14" y2="3"/>
                </svg>
              )}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Legal -->
    <div>
      <h3 class="text-sm font-semibold text-[var(--color-text)] mb-4 uppercase tracking-wider">
        Legal
      </h3>
      <ul class="space-y-3">
        {columns.legal.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)]
                     transition-colors duration-200"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Built with -->
    <div>
      <h3 class="text-sm font-semibold text-[var(--color-text)] mb-4 uppercase tracking-wider">
        Built with
      </h3>
      <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
        Made with Astro, SwiftUI, and focus.
      </p>
      <p class="mt-6 text-sm text-[var(--color-text-muted)]">
        &copy; {currentYear} DotEdit
      </p>
    </div>
  </div>
</footer>
